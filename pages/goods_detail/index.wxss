
.container{
  padding-bottom: 100rpx;
}
.swiper{
  width: 750rpx;
  height: 750rpx;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.price{
  font-size: 18px;
  color: #eb4450;
  margin-left:10rpx; 
  margin: 25rpx 0;
}

.titleinfo{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left:10rpx; 
}

.title{
  font-size: 14px;
  width: 70%;
  /* 多行文本省略换行 */
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.collect{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  color: #666;
}

.collectitem{
  font-size: 10px;
  margin: 0 30rpx;
}

.coury{
  font-size: 12px;
  color: #666;
  padding: 20rpx 0;
  margin-left:10rpx; 
}
.sales{
  margin:0 0 25rpx 10rpx; 
  font-size: 14px;
  
}
.substract{
  color: #ff2d4a;
  margin-left: 30rpx
}

.info{
  display: flex;
  font-size: 14px;
}
.infocontent{
  margin: 10rpx 0 ;
}
.info view{
  width: 50%;
  padding: 10rpx;
  text-align: center;
  border-radius: 5px
}
.spe{
  font-size: 12px;
}
.active{
  background-color: orangered;
  color: #fff
}

.bottom{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.call{
  flex: 1;
  font-size: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cart{
  flex: 1;
  font-size: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.addcart{
  flex: 1;
  text-align: center;
  font-size: 14px;
  padding: 20rpx;
  background-color: #f4b73f;
  color: #fff;
  border-radius: 8px
}
.buy{
  flex: 1;
  text-align: center;
  font-size: 14px;
  padding: 20rpx;
  background-color: #eb4450;
  color: #fff;
  border-radius: 8px
}