page {
  background-color: #eee;
  font-size: 14px;
}
.container{
  width: 750rpx;
  
}
.content{
  box-sizing: border-box;
  padding: 0 20rpx;
}
.userinfo{
  height: 400rpx;
  background-color: #ff2d4a;
  display: flex;
  align-items: center;
  justify-content: center;
}

.iconshezhi,.iconxinxi{
  color:#fff
}

.userimg{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.img{
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  border: 2px solid #fff;
  border-radius: 50%;
  /* 圆角bug 设置溢出隐藏能解决*/
  overflow: hidden
}

.storeinfo{
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 140rpx;
  padding: 40rpx;
  background-color: #fff;
  font-size: 12px;
  color: #666;
  position: relative;
  top: -20rpx;
  border-radius: 4px;
}

.star{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  
}
.star view{
  font-size: 11px
}
.title{
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 6px
}

.paycontent{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 11px;
  padding: 20rpx 0;
  background-color: #fff;
  margin-top: 1px;
  border-radius: 6px
}

.payitem{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.payitem view{
  margin-bottom: 15rpx;
  color: #ff2d4a
}
.adress{
  margin: 20rpx 0;
}
.service{
  display: flex;
  justify-content: space-between;
  align-items: center
}
.service text{
  color: #aaa;
  font-size: 12px
}